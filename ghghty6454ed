-- Vendetta Hub GUI Script
-- Cargar en un executor como Synapse X, KRNL, Fluxus, etc.

-- Anti-doble carga
if game.CoreGui:FindFirstChild("VendettaHub") then
    game.CoreGui:FindFirstChild("VendettaHub"):Destroy()
end

-- Crear elementos básicos
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

local ScreenGui = Instance.new("ScreenGui", CoreGui)
ScreenGui.Name = "VendettaHub"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.BorderColor3 = Color3.fromRGB(0, 255, 0)
MainFrame.BorderSizePixel = 2
MainFrame.Parent = ScreenGui
MainFrame.Active = true
MainFrame.Draggable = true

-- Título
local Title = Instance.new("TextLabel", MainFrame)
Title.Text = "Vendetta Hub"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(0, 255, 0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 22

-- Minimizar botón
local Minimize = Instance.new("TextButton", MainFrame)
Minimize.Text = "_"
Minimize.Size = UDim2.new(0, 30, 0, 30)
Minimize.Position = UDim2.new(1, -35, 0, 5)
Minimize.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Minimize.BorderColor3 = Color3.fromRGB(0, 255, 0)
Minimize.TextColor3 = Color3.fromRGB(0, 255, 0)
Minimize.Font = Enum.Font.GothamBold
Minimize.TextSize = 18

-- Contenedor de botones de scripts
local ButtonHolder = Instance.new("Frame", MainFrame)
ButtonHolder.Size = UDim2.new(1, -20, 1, -60)
ButtonHolder.Position = UDim2.new(0, 10, 0, 50)
ButtonHolder.BackgroundTransparency = 1

-- UI List
local UIListLayout = Instance.new("UIListLayout", ButtonHolder)
UIListLayout.Padding = UDim.new(0, 10)

-- Función para crear botones
local function CreateScriptButton(text, scriptURL)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 40)
    button.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    button.BorderColor3 = Color3.fromRGB(0, 255, 0)
    button.TextColor3 = Color3.fromRGB(0, 255, 0)
    button.Font = Enum.Font.Gotham
    button.TextSize = 16
    button.Text = text
    button.Parent = ButtonHolder

    button.MouseButton1Click:Connect(function()
        pcall(function()
            loadstring(game:HttpGet(scriptURL))()
        end)
    end)
end

-- Agrega tus scripts aquí:
CreateScriptButton("Script 1", "https://pastebin.com/raw/XXXXXXXX")
CreateScriptButton("Script 2", "https://pastebin.com/raw/YYYYYYYY")
-- Puedes duplicar la línea anterior para más scripts

-- Función para ocultar/mostrar
local visible = true
local function toggleVisibility()
    visible = not visible
    MainFrame.Visible = visible
end

-- Toggle con Right Control
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.RightControl and not gameProcessed then
        toggleVisibility()
    end
end)

-- Minimizar con botón
Minimize.MouseButton1Click:Connect(function()
    toggleVisibility()
end)
